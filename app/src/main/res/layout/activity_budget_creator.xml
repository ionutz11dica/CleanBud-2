<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".View.Activities.BudgetCreatorActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/budget_creator_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="-1dp"
        android:background="#633a82"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
         />


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#633a82"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="15dp"

        android:layout_height="170dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton

            android:id="@+id/state_budget_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/whiteTextColor"
            android:scaleType="center"
            android:src="@drawable/ic_write"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget Title"
                android:textColor="@color/whiteTextColor"
                android:textSize="16dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/whiteTextColor"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_budget_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="data curenta"
                    android:textSize="16dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/typeState_spn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>