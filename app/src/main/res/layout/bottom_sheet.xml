<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"

        android:padding="10dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="56dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ib_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:foreground="?attr/selectableItemBackground"
                android:background="@null"
                android:src="@drawable/ic_payment"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Salary" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"

            android:background="@null"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ib_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:foreground="?attr/selectableItemBackground"
                android:background="@null"
                android:src="@drawable/ic_work_from_home"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Freelance"
                android:textAlignment="center"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ib_sales"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:foreground="?attr/selectableItemBackground"
                android:background="@null"
                android:src="@drawable/ic_discount"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Sales" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ib_cash"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:foreground="?attr/selectableItemBackground"
                android:background="@null"
                android:src="@drawable/ic_cashback"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Cashback" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ib_rent"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:foreground="?attr/selectableItemBackground"
                android:background="@null"
                android:src="@drawable/ic_rent"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Rent" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="14dp"
        android:textColor="@color/black"
        android:text="Title Income" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:paddingStart="10dp"

        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_bs_title_income"
            android:layout_width="match_parent"
            android:lines="1"

            android:hint="Title Income"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="14dp"
        android:textColor="@color/black"
        android:text="Amount *" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_bs_amount_income"
            android:layout_width="match_parent"
            android:lines="1"
            android:inputType="number"
            android:hint="Amount"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date income"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_date_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_date_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="20-05-2020"

             />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/add_income_bs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#8F8FC9"
        android:foreground="?attr/selectableItemBackground"
        android:text="ADD INCOME"
        android:textColor="#fff" />

</LinearLayout>

</layout>