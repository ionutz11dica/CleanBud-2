<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/hotel_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/black"
            android:layout_marginTop="-1dp"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />

        <LinearLayout
            android:id="@+id/ll_image_details"
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:layout_height="230dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:alpha="0.5"
                android:background="#33000000">

                <TextView
                    android:id="@+id/tv_hotel_name_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:padding="10dp"
                    android:text="Hotel Panamoia del Mandos"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/imv_hotel_details"

                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginEnd="12dp"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/ibtn_weather"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_sky"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="weather"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/ibtn_map"

                    android:layout_width="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_location_on"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="map"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/ibtn_call"

                    android:layout_width="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_call_black_24dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick call"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name_hotel_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:padding="12dp"

                android:textAlignment="center"
                android:textColor="#eb4559"
                android:text="Name hotel"/>

            <TextView
                android:id="@+id/tv_description_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="weather"
                android:lines="6"
                android:ellipsize="end"
                android:textSize="16dp"
                android:padding="14dp"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            android:weightSum="1"
            android:layout_marginStart="12dp">
            <Button
                android:id="@+id/btn_back_hotels"

                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:background="#eb4559"
                android:foreground="?attr/selectableItemBackground"
                android:text="back"
                android:drawableLeft="@drawable/ic_arrow_left"
                android:textColor="#fff" />
            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:background="@null"
                android:src="@drawable/ic_favorite"
                android:layout_height="match_parent"
                />


        </LinearLayout>

    </LinearLayout>

</layout>