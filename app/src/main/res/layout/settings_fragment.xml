<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Settings"
        android:layout_marginTop="-1dp"
        android:background="#633a82"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="12dp"
            android:padding="3dp"
            android:weightSum="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:textSize="18dp"
                android:text=" Push notification"
                android:drawableLeft="@drawable/ic_notifications_black_24dp"
                android:layout_height="wrap_content"/>

            <Switch
                android:id="@+id/notification_switch"
                android:checked="true"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_marginStart="3dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0.85"
                android:textSize="18dp"
                android:textStyle="bold"

                android:textColor="#633a82"
                android:text="About"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.85"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:text="CleanBud v1.0.0 (20200620) \n\n This a complete mobile solution that helps you managing your own budget and save money..."
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>

</layout>