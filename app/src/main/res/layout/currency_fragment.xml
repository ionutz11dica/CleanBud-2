<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#d291bc"
                android:orientation="vertical"
                android:layout_weight="1">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/currency_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d291bc"

                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                />
                
                <TextView
                    android:layout_marginTop="30dp"
                    android:id="@+id/tv_currency_name"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>

                <Button
                    android:id="@+id/btn_change"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Change"
                    android:foreground="?attr/selectableItemBackground"

                    android:textColor="@color/white"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button_purple"
                    />

                <EditText
                    android:layout_marginTop="30dp"
                    android:id="@+id/tv_currency_amount"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:textSize="54dp"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#633a82"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_marginTop="70dp"
                    android:id="@+id/tv_currency_amount_exchanged"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:textColor="@color/white"
                    android:textSize="54dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_currency_name_echanged"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_equivalent"
                        android:layout_marginBottom="12dp"

                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="test"
                        android:textColor="@color/white"
                        android:textSize="14dp"/>

                    <TextView
                        android:layout_marginBottom="12dp"
                        android:id="@+id/tv_date_rates"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="test"
                        android:textColor="@color/white"
                        android:textSize="14dp"/>
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_swap_calls_black_24dp" />
    </RelativeLayout>
</layout>